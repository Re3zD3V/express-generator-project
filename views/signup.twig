{% extends 'layout.twig' %}

{% block header %}
	<div class="col d-flex justify-content-center">
		<h1 class="text-danger">Sign up</h1>
	</div>
{% endblock %}

{% block content %}
	<div class="row">
		<form action="/register/signup" method="post" class="border px-4 py-3">
			<div class="mb-3">
				<label for="txtUsername" class="form-label">Username:</label>
				<input id="txtUsername" name="txtUsername" placeholder="Username" type="text" class="form-control" required/>
			</div>
			<div class="mb-3">
				<label for="pwd" class="form-label">Password:</label>
				<input id="pwd" name="pwd" placeholder="Password" type="password" class="form-control" required/>
			</div>
			<div class="d-flex justify-content-center">
				<input type="reset" value="Reset" class="form-control w-25 me-3"/>
				<input type="submit" value="Submit" class="form-control w-25"/>
			</div>
		</form>
	</div>
{% endblock %}